.app-file-list
  margin-left: -2.5px
  margin-right: -2.5px
  .ant-col
    padding-left: 2.5px
    padding-right: 2.5px

.app-file-list-file
  position: relative
  overflow: hidden
  outline 1px solid #f0f0f0
  a
    color black
  img
    width 100%;
.app-file-list-file-icon
  position: absolute
  top 0
  left 0
  width: 100%
  height 100%
  display flex
  flex-direction column
  align-items center
  justify-content center

  .anticon
    margin-bottom: 5px
    svg, img
      width: 50px
      height: 50px

.app-file-list-mask
  flex-direction: column
  padding: 10px
  overflow: hidden
  &.hover
    opacity: 1

.app-file-list-mask-name
  margin-bottom: 5px
  font-size: 12px
  line-height: 14px
  max-height: 70px
  word-break: break-word
  overflow: hidden

.app-file-list-mask-buttons
  display: flex
  justify-content: center
  align-items: center
  button
    margin: 0 3px
    &:last-child
      margin-right: 0
    &:first-child
      margin-left: 0
